@model IPagedList<prjShoppingForum.Models.Entity.tUserProfile>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "MemberList";
}
<link href="~/Content/PagedList.css" rel="stylesheet" />
<h2>MemberList</h2>

<p>
    @Html.ActionLink("新增會員", "UserCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().fId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().fUserId)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().fName)
