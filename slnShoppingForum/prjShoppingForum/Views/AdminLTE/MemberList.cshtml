@model IPagedList<prjShoppingForum.Models.Entity.tUserProfile>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "MemberList";
}
<link href="~/Content/PagedList.css" rel="stylesheet" />
<div class="d-flex p-2 ">
    <h2>會員清單列表</h2>
    </div>
    <div class="d-flex p-2 ">
            <form action="MemberList" method="post">
                帳號 : <input type="text" name="searchUserId" />    <button class="btn btn-navbar" type="submit" value="搜尋">
                    <i class="fas fa-search"></i>
                </button>
            </form>
            <form action="MemberList" method="post">
                姓名 : <input type="text" name="searchName" />    <button class="btn btn-navbar" type="submit" value="搜尋">
                    <i class="fas fa-search"></i>
                </button>
            </form>
            <form action="MemberList" method="post">
                城市 : <input type="text" name="searchCity" />    <button class="btn btn-navbar" type="submit" value="搜尋">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
    <div class="d-flex p-2 ">
        @if (Model != null)
        {
            @Html.PagedListPager(Model, page => Url.Action("MemberList", new { page }))
        }
        </div>
        <div class="d-flex p-2 bd-highlight">
            <table class="table">
                <thead style="background-color:#524087 ;color:aliceblue">
                    <tr>
                        <th style="width:3.8rem">
                            編號
                        </th>
                        <th style="width:10rem">
                            @Html.DisplayNameFor(model => model.FirstOrDefault().fUserId)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().fName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().fGender)
                        </th>
                        <th style="width:10rem">
                            @Html.DisplayNameFor(model => model.FirstOrDefault().fBirthday)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().fTel)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().fPhone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().fCity)
                        </th>
                        <th style="width:10rem">
                            @Html.DisplayNameFor(model => model.FirstOrDefault().fAddress)
                        </th>
                        @*<th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().fPhoto)
                        </th>*@
                        <th style="width:10rem">
                            @Html.DisplayNameFor(model => model.FirstOrDefault().fCreateDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().fScore)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().fAuth)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().fAuthPost)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().fAuthReply)
                        </th>
                        @*<th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().tScore.fId)
                        </th>*@
                        @*<th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().tUserLog.fUserIP)
                        </th>*@
                        <th></th>
                    </tr>
                </thead>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.fId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fUserId)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.fName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fGender)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fBirthday)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fTel)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fPhone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fCity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fAddress)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.fPhoto)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.fCreateDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fScore)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fAuth)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fAuthPost)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fAuthReply)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.tScore.fId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tUserLog.fUserIP)
                            </td>*@
                            <td>
                                @Html.ActionLink("編輯", "MemberEdit", "AdminLTE", new { id = item.fId }, new { @class = "btn btn-info" })
                                @*@Html.ActionLink("Delete", "Delete", new { id = item.fId }, new { @class = "btn btn-danger" })*@
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>


