@model IEnumerable<prjShoppingForum.Models.Entity.tNew>
@*vvv  *@

@* 後台消息清單 *@

<h2>最新消息列表</h2>
<div class="sear">
    @using (Html.BeginForm())
    {
        <span>
            搜尋:
        </span>
        @Html.TextBox("SearchKey", "");
        <button class="btn btn-navbar" type="submit" value="搜尋">
            <i class="fas fa-search"></i></button>

    }
    <h5>@ViewBag.Message</h5>
</div>

<div style="text-align:right">
    <p>
        @Html.ActionLink("新增消息", "NewsCreate", new { }, new { @class = "btn btn-outline-primary" })
    </p>
</div>
<table class="table">
    <thead style="background-color:#524087 ;color:aliceblue">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fClass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fNewsTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fNewsDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fNewsStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fNewsEnd)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.fApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fNewsDiscontinue)
            </th>
            <th></th>
        </tr>
    </thead>


    <tbody class="table table-active accent-pink">

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.fClass)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fNewsTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fNewsDesc)
                </td>
                <td>
                    @item.fNewsStart.ToLongDateString()
                </td>
                <td>
                    @item.fNewsEnd.ToLongDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fApproved)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fNewsDiscontinue)
                </td>

                <td>
                    @Html.ActionLink("編輯", "NewsEdit", new { id = item.fNewsId }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("明細", "NewsDetails", new { id = item.fNewsId }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("下架", "NewsDelete", new { id = item.fNewsId }, new { @class = "btn btn-warning" })
                </td>
            </tr>
        }
    </tbody>
</table>
