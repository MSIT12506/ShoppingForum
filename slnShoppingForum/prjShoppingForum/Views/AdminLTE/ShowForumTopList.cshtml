@model List<prjShoppingForum.Models.Entity.tForum>

@{ 
    int seq = 0;
}

<table class="table table-dark" style="width:100%">
    <thead>
        <tr>
            <th>
                文章序號
            </th>
            <th>
                文章標題
            </th>
            <th>
                置頂序號
            </th>
            <th>
                取消置頂
            </th>
        </tr>
    </thead>
    <tbody id="tableTop">
        @{ 
            foreach (var item in Model)
            {
                seq++;
                <tr>
                    <td data-postId="@item.fPostId">
                        @item.fPostId
                    </td>
                    <td>
                        @item.fPostTitle
                    </td>
                    <td>
                        @seq
                    </td>
                    <td>
                        <button class="btn btn-primary btn-cancelSetTopList">
                            取消置頂
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<button class="btn btn-primary btn-confirmSetTopList">確認</button>
