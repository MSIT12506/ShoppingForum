
@{
    ViewBag.Title = "ForgetPassword";
}

<div class="containers">
    <div class="signup-content">
        <div class="signup-form" style="margin:50px 30px">
            <h3 class="form-title">忘記密碼</h3>
            <p>請輸入Email，將重新發送密碼到Email中</p>
            <form id="myform" class="register-form" action="/FrontUserProfile/ForgetPassword" name="ForgotPwdForm" method="post">
                <div class="form-group">
                    @*<p>請輸入信箱：</p>*@
                    <input type="email" name="UserId" placeholder="Email" required /><br /><br />
                    <input type="submit" value="確定送出" class="btn btn-secondary" />
                </div>
            </form>
        </div>
        <div class="signup-image">
            <figure><img src="~/Images/Member/passwordForget_big.png" height="320" width="320" alt="sign-in image" title="哈哈你看看你"></figure>
        </div>

    </div>
</div>

<link rel="stylesheet" href="~/Content/material-design-iconic-font.min.css">
<link rel="stylesheet" href="~/Content/SignUpstyle.css">


@section Scripts{
    <script>
        let flag;
        $('#myform').submit(function () {
            alert("新密碼已寄送至您填寫的信箱，請用新密碼重新登入");
        })
    </script>
}


