@model prjShoppingForum.Models.Entity.tUserProfile
@using tw.com.essentialoil.User.Models;

@{
    ViewBag.Title = "Login";
    string pic = " ";

}

<div class="containers">
    <div class="signup-content">
        <div class="signup-form">
            <h3 class="form-title font-family">會員登入</h3>
            <form method="POST" class="register-form" id="register-form">

                <div class="form-group">
                    <label for="email"></label>
                    <input type="email" name="fUserId" id="email" placeholder="Your Email as Account" required />
                    @*@Html.ValidationMessageFor(model => model.fUserId, "", new { @class = "text-danger" })*@

                </div>

                <div class="form-group">
                    <label for="pass"></label>
                    <input type="password" name="fPassword" id="pass" placeholder="Password" pattern="^[a-zA-Z0-9]{6,12}" maxlength="12" required />
                    @* @Html.ValidationMessageFor(model => model.fPassword, "", new { @class = "text-danger" })*@

                </div>

                <div class="form-group">
                    @* <p>Please Enter AuthCode:</p>*@
                    <input type="text" name="fVeriCode" placeholder="Please Enter AuthCode" />
                    <p>

                        @if (Session[UserDictionary.S_AUTHENTICATED_CODE] != null)
                        {
                            pic = Session[UserDictionary.S_AUTHENTICATED_CODE].ToString().Substring(0, 1) + ".png";
                            @:<img src="/Images/Member/@pic" width="30" />
                            pic = Session[UserDictionary.S_AUTHENTICATED_CODE].ToString().Substring(1, 1) + ".png";
                            @:<img src="/Images/Member/@pic" width="30" />
                            pic = Session[UserDictionary.S_AUTHENTICATED_CODE].ToString().Substring(2, 1) + ".png";
                            @:<img src="/Images/Member/@pic" width="30" />
                            pic = Session[UserDictionary.S_AUTHENTICATED_CODE].ToString().Substring(3, 1) + ".png";
                            @:<img src="/Images/Member/@pic" width="30" />
                        }
                    </p>
                </div>

                <div id="forget" value="忘記密碼"  style="text-align:right;margin-bottom:15px">
                    <img src="~/Images/Member/passwordForget.png" style="width:15px;height:15px;margin-right:-10px"/>
                    <input type="button" class="btn btn-outline-primary font-family" value="忘記密碼"
                     style="font-size:12px;width:20%;border:none;padding:0px" />
                </div>

                <div class="form-group form-button">
                    <input type="submit" name="login" id="login" class="btn btn-primary font-family" value="登入"/>
                    @*<input type="reset" name="signup" id="signup" class="form-submit btn-primary" value="清空" />*@
                </div>
            </form>
        </div>
        <div class="signup-image">
            <figure><img src="~/Images/Member/lavender5.png" height="400" width="450" alt="sign-in image" title="登登登"></figure>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/Content/material-design-iconic-font.min.css">
<link rel="stylesheet" href="~/Content/SignUpstyle.css">

@section scripts{
        <script>
            var forget = document.querySelector("#forget")
            forget.addEventListener("click", function () {
                location.href = "/FrontUserProfile/ForgetPassword";
            });

        </script>
    }


