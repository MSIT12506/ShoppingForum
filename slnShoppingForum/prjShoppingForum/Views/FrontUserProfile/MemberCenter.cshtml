    <div class="body">
        <div class="form-row">
            <div class="btn-group-vertical">
                <input type="button" value="個人資料" id="detail" class="btn btn-info  btn-lg" />
                <input type="button" value="修改密碼" id="edit" class="btn btn-info  btn-lg" />
                <input type="button" value="修改個人資料" id="editinfo" class="btn btn-info  btn-lg" />
                <input type="button" value="歷史訂單" id="orderlist" class="btn btn-info  btn-lg" />
                <input type="button" value="積分" id="myscore" class="btn btn-info  btn-lg" />
                <input type="button" value="優惠券" id="discount" class="btn btn-info  btn-lg" />
            </div>
        </div>
        <div class="wrappers">
            <div id="divbox1"></div>
        </div>
