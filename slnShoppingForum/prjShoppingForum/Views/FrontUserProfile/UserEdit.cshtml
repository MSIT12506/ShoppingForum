@model prjShoppingForum.Models.Entity.tUserProfile
@{
    ViewBag.Title = "UserEdit";
}

    <div class="wrappers">
        <h3>編輯會員資料</h3>
        <form action="/FrontUserProfile/UserEdit" method="post" name="editform">
            <div class="form-row">
                <div class="form-holder">

                    姓名<br /><input type="text" name="fName" value="@Model.fName" />
                </div>
                <div class="form-holder">
                    電話<br /><input type="text" name="fTel" value="@Model.fTel" />

                </div>
            </div>
            <div class="form-row">
                <div class="form-holder">

                    生日<br /><input type="text" name="fBirthday" pattern="{0:yyyy/MM/dd}" placeholder="如:1923/02/05" value="@Model.fBirthday" />
                </div>
                <div class="form-holder">
                    手機<br /><input type="text" name="fPhone" value="@Model.fPhone" />

                </div>
            </div>
            <div class="form-row">
                <div class="form-holder">
                    城市<br /><input type="text" name="fCity" value="@Model.fCity" />

                </div>
                <div class="form-holder">
                    地址<br /><input type="text" name="fAddress" value="@Model.fAddress" />

                </div>
            </div>
            <div class="form-row">
                <div class="form-holder">
                    <input type="submit" class="btn btn-warning" value="送出" name="editbutton" />

                </div>
                <div class="form-holder">
                    @*<input type="submit" class="btn btn-warning" value="送出" name="editbutton" />*@
                </div>
            </div>


        </form>
    </div>

<link rel="stylesheet" href="~/Content/styles.css">

@section Scripts{
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/mains.js"></script>
}