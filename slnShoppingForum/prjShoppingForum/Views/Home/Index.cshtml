@section Styles{
    <style>
        .mywrapper {
            position: relative;
            width: 100vw;
            height: 600px;
            overflow: hidden;
            margin: 0 auto;
            background: #000;
        }

        .ulAll {
            margin: 0;
            padding: 0;
            position: absolute;
        }

        .liAll {
            margin: 0;
            padding: 0;
            list-style: none;
        }

        ul.slides {
            left: 0;
            transition: all .5s;
        }

       ul.slides li {
            width: 100vw;
            height: 600px;
            overflow: hidden;
            float: left;
        }

        ul.slides li img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .page {
            bottom: 10px;
            width: 100%;
            display: flex;
            justify-content: center;
        }

        .page li {
            border: 1px solid #fff;
            border-radius: 50%;
            margin: 0 5px;
            width: 20px;
            height: 20px;
        }

        .page li:hover, .page li.active {
            background: #fff;
        }

        .wrapper .dir_wrap {
            position: absolute;
            top: 0;
            bottom: 0;
            width: 40px;
            cursor: pointer;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .dir_left {
            left: 0;
        }

        .dir_right {
            right: 0;
        }

        .oi {
            opacity: .5;
            color: #000;
        }

        .dir_wrap:hover .oi {
            opacity: 1;
        }
    </style>
}

