@section Scripts{
    <script>
        var num = 0;
        var slideWidth = $('.mywrapper').css('width').replace('px','');
        var sliders = ["bg-1.png", "bg-2.jpg", "bg-3.jpg"];
        var slideCount = sliders.length;

        for (i = 0; i < slideCount; i++) {
            let li_tmp_slides = $('<li></li>').addClass('liAll')
            let img = $('<img />').attr('src', `/Images/Index/${sliders[i]}`);
            let li = li_tmp_slides.append(img)

            let li_tmp = $('<li></li>').addClass('liAll')

            $(".slides ").append(li);
            $(".page").append(li_tmp);
        }

        $(".page li").eq(0).addClass('active');
        setWidth();
        $(".page").on("mouseenter", "li", function () {
            num = $(this).index();
            goSlide(num);

        });

        $("#dir_left").click(function () {
            if (num > 0) {
                num = num - 1;
            }
            goSlide(num);
        });
        $("#dir_right").click(function () {
            if (num < (slideCount - 1)) {
                num = num + 1;
            }
            goSlide(num);
        });

        $(window).resize(function () {
            setWidth();
        });

        function setWidth() {
            var width = $(window).width();
            if (width <= slideWidth) {
                slideWidth = width;
            } else {
                slideWidth = slideWidth;
            }
            $(".slides").width(slideWidth * slideCount);
            $(".slides li, .mywrapper").width(slideWidth);
            goSlide(num);
        }
        function goSlide(num) {
            $(".page li").eq(num).addClass("active")
                .siblings().removeClass("active");
            $(".slides").css("left", 0 - slideWidth * num + "px");
        }

    </script>
}
