@model tw.com.essentialoil.Product.ViewModels.SearchModel

@{
    ViewBag.Title = "AdvanceQueryPage";
}


<fieldset style="width:50%; border:3px solid #85DBD5; border-radius:20px; margin:170px auto 80px auto">
    @using (Html.BeginForm("ProductFrontPage", "ProductFront"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="margin-left:20px; margin-top:20px;">
            <h6 style="padding:10px;font-size:18px;font-family:UD Digi Kyokasho N-R">進階搜尋</h6>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.Label("商品關鍵字", htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.searchprod, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.searchprod, "", new { @class = "text-danger" })
                </div>
            </div>

                <div class="form-group">
                    @Html.Label("種類", htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-6">
                        @Html.DropDownListFor(model => model.categoryId, (IEnumerable<SelectListItem>)ViewBag.CategoryDropList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.categoryId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("功效", htmlAttributes: new { @class ="control-label col-md-6" })
                    <div class="col-md-6">
                        @Html.DropDownList("efficacyId", (IEnumerable<SelectListItem>)ViewBag.efficacyDropList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.efficacyId, "", new { @class = "text-danger" })
                    </div>
                </div>

            <div class="form-group">
                @Html.Label("香調", htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.noteId, (IEnumerable<SelectListItem>)ViewBag.NoteDropList, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.noteId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("萃取部位", htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.partId, (IEnumerable<SelectListItem>)ViewBag.PartDropDownList, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.partId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("特性", htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.featureId, (IEnumerable<SelectListItem>)ViewBag.featureDropList, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.featureId, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-offset-2 col-10">
                    <input type="submit" value="送出搜尋" class="btn btn-info" style="margin:10px" />
                </div>
            </div>
        </div>
    }
</fieldset>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
