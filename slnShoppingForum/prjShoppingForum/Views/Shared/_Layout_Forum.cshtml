<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="~/Styles/main.css" />
    <link rel="stylesheet" media="screen and  (max-width: 600px)" href="~/Styles/main_RWD600.css" />
    <link rel="stylesheet" type="text/css" href="~/Styles/Forum/layout.css" />
    <link rel="stylesheet" media="screen and  (max-width: 1100px)" href="~/Styles/Forum/layout_rwd600.css" />
    @RenderSection("Styles",false)


</head>
<body>
    <div class="ForumSharedLayout">
        <div class="div-fixed forum-left">
            <div class="btn-left btn-logo"><img src="~/Images/logo.png" /></div>
            <div class="btn-left"><div class="btn-area"><img src="~/Images/PostList.png" /><div class="btn-title">首頁　　　　</div></div></div>
            <div class="btn-left"><div class="btn-area"><img src="~/Images/NewPost.png" /><div class="btn-title">發表文章　　</div></div></div>
            <div class="btn-left"><div class="btn-area"><img src="~/Images/favorite.png" /><div class="btn-title">收藏文章清單</div></div></div>
            <div class="btn-left"><div class="btn-area"><img src="~/Images/disappear.png" /><div class="btn-title">隱藏文章清單</div></div></div>
        </div>
        <div class="forum-mid">
            @RenderBody()
        </div>
        <div class="forum-right">
            <div class="btn-right btn-right-top">
                <input type="text" />
                <button>搜尋</button>
            </div>
            <div class="btn-right">
                <ul>
                    <li>
                        新手須知<br />
                        <a>新手須知1</a><br />
                        <a>新手須知2</a><br />
                        <a>新手須知3</a><br />
                        <a>新手須知4</a><br />
                        <hr />
                    </li>
                    <li>
                        置頂區<br />
                        <a>置頂文章1</a><br />
                        <a>置頂文章2</a><br />
                        <a>置頂文章3</a><br />
                        <a>置頂文章4</a><br />
                        <hr />
                    </li>
                </ul>
            </div>

        </div>
    </div>

    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    @*For quill using*@
    <link href="~/Styles/quill.snow.css" rel="stylesheet">
    <script src="~/Scripts/quill.js"></script>
    @RenderSection("Scripts", false)

</body>
</html>
